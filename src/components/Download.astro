---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Descargar Netmon">
    <section class="py-20 px-4 theme-transition" style="background-color: var(--background);">
        <div class="max-w-4xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-extrabold mb-4" style="color: var(--text);">Descargar Netmon</h2>
                <p class="text-xl font-light" style="color: var(--text); opacity: 0.7;">Comienza tu aventura en el mundo digital</p>
            </div>

            <!-- Requisitos del Sistema -->
            <div class="grid md:grid-cols-2 gap-8 mb-16">
                <div class="group relative p-6 rounded-xl border theme-transition overflow-hidden" style="border-color: var(--card-border); background-color: var(--card-bg);">
                    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjAiIGhlaWdodD0iMjAiIHZpZXdCb3g9IjAgMCAyMCAyMCIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48Y2lyY2xlIGN4PSIxMCIgY3k9IjEwIiByPSIxLjUiIGZpbGw9ImN1cnJlbnRDb2xvciIvPjwvc3ZnPg==')] opacity-30 group-hover:opacity-50 transition-opacity duration-300"></div>
                    <div class="relative">
                        <h3 class="text-2xl font-bold mb-4" style="color: var(--text);">Requisitos Mínimos</h3>
                        <ul class="space-y-2 font-light" style="color: var(--text); opacity: 0.7;">
                            <li>• Windows 10 o superior</li>
                            <li>• Procesador Intel Core i3 o AMD Ryzen 3</li>
                            <li>• 4GB RAM</li>
                            <li>• 2GB espacio en disco</li>
                            <li>• DirectX 11 compatible</li>
                        </ul>
                    </div>
                </div>

                <div class="group relative p-6 rounded-xl border theme-transition overflow-hidden" style="border-color: var(--card-border); background-color: var(--card-bg);">
                    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjAiIGhlaWdodD0iMjAiIHZpZXdCb3g9IjAgMCAyMCAyMCIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48Y2lyY2xlIGN4PSIxMCIgY3k9IjEwIiByPSIxLjUiIGZpbGw9ImN1cnJlbnRDb2xvciIvPjwvc3ZnPg==')] opacity-30 group-hover:opacity-50 transition-opacity duration-300"></div>
                    <div class="relative">
                        <h3 class="text-2xl font-bold mb-4" style="color: var(--text);">Requisitos Recomendados</h3>
                        <ul class="space-y-2 font-light" style="color: var(--text); opacity: 0.7;">
                            <li>• Windows 11</li>
                            <li>• Procesador Intel Core i5 o AMD Ryzen 5</li>
                            <li>• 8GB RAM</li>
                            <li>• 5GB espacio en disco</li>
                            <li>• DirectX 12 compatible</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Botones de Descarga -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
                <a href="#" class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors duration-300">
                    Descargar Versión Estable
                </a>
                <a href="#" class="px-8 py-3 rounded-lg font-bold transition-colors duration-300" style="background-color: var(--card-bg); color: var(--text);">
                    Descargar Versión Beta
                </a>
            </div>

            <!-- Notas de Versión -->
            <div class="space-y-8">
                <div class="group relative p-6 rounded-xl border theme-transition overflow-hidden" style="border-color: var(--card-border); background-color: var(--card-bg);">
                    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjAiIGhlaWdodD0iMjAiIHZpZXdCb3g9IjAgMCAyMCAyMCIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48Y2lyY2xlIGN4PSIxMCIgY3k9IjEwIiByPSIxLjUiIGZpbGw9ImN1cnJlbnRDb2xvciIvPjwvc3ZnPg==')] opacity-30 group-hover:opacity-50 transition-opacity duration-300"></div>
                    <div class="relative">
                        <h3 class="text-2xl font-bold mb-4" style="color: var(--text);">Versión 1.0.0</h3>
                        <ul class="space-y-2 font-light" style="color: var(--text); opacity: 0.7;">
                            <li>• Lanzamiento inicial del juego</li>
                            <li>• 100 Netmons únicos</li>
                            <li>• Sistema de combate básico</li>
                            <li>• Mundo abierto inicial</li>
                        </ul>
                    </div>
                </div>

                <div class="group relative p-6 rounded-xl border theme-transition overflow-hidden" style="border-color: var(--card-border); background-color: var(--card-bg);">
                    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjAiIGhlaWdodD0iMjAiIHZpZXdCb3g9IjAgMCAyMCAyMCIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48Y2lyY2xlIGN4PSIxMCIgY3k9IjEwIiByPSIxLjUiIGZpbGw9ImN1cnJlbnRDb2xvciIvPjwvc3ZnPg==')] opacity-30 group-hover:opacity-50 transition-opacity duration-300"></div>
                    <div class="relative">
                        <h3 class="text-2xl font-bold mb-4" style="color: var(--text);">Versión Beta 0.9.0</h3>
                        <ul class="space-y-2 font-light" style="color: var(--text); opacity: 0.7;">
                            <li>• Nuevo sistema de combate mejorado</li>
                            <li>• 50 Netmons adicionales</li>
                            <li>• Nuevas áreas explorables</li>
                            <li>• Correcciones de errores</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout> 