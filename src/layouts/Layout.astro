---
	import './src/styles/global.css'
	interface Props {
		title: string;
	}

	const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Netmon - Un mundo digital lleno de aventuras" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@100;200;300;400;500;600;700;800&display=swap" rel="stylesheet">
		<title>{title}</title>
		<style is:global>
			:root {
				--background: #ffffff;
				--text: #18181b;
				--header-bg: rgba(255, 255, 255, 0.8);
				--header-text: #18181b;
				--card-bg: #ffffff;
				--card-border: #e4e4e7;
			}

			[data-theme="dark"] {
				--background: #18181b;
				--text: #fafafa;
				--header-bg: rgba(24, 24, 27, 0.8);
				--header-text: #fafafa;
				--card-bg: #27272a;
				--card-border: #3f3f46;
			}

			html {
				font-family: 'JetBrains Mono', monospace;
				background-color: var(--background);
				color: var(--text);
				scroll-behavior: smooth;
			}

			body {
				margin: 0;
				padding: 0;
				min-height: 100vh;
				background-color: var(--background);
				color: var(--text);
			}

			.theme-transition {
				transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
			}
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>
